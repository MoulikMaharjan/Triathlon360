<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/tri_bg">

    <!-- title -->
    <TextView
        android:id="@+id/text_graph_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="training history graph"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/tri_neon"
        android:layout_marginBottom="8dp" />

    <!-- subtitle / filter info -->
    <TextView
        android:id="@+id/text_graph_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="showing distance per session"
        android:textSize="13sp"
        android:textColor="@color/tri_text"
        android:layout_marginBottom="16dp" />

    <!-- scrollable bar area -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/bar_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom" />
    </HorizontalScrollView>

    <!-- simple legend -->
    <TextView
        android:id="@+id/text_graph_legend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bar height = distance (m or km), each bar = one session"
        android:textSize="12sp"
        android:textColor="@color/tri_text"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp" />

</LinearLayout>
