<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tri_bg"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/text_weekly_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="weekly training load"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/tri_neon"
        android:layout_marginBottom="4dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/text_weekly_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stacked minutes of swim, bike and run per week"
        android:textSize="14sp"
        android:textColor="@color/tri_text"
        android:layout_marginBottom="16dp" />

    <!-- MPAndroidChart BarChart -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bar_chart_weekly"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Hint text under the chart -->
    <TextView
        android:id="@+id/text_weekly_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tip: each bar = total minutes per week (swim + bike + run)"
        android:textSize="12sp"
        android:textColor="@color/tri_muted"
        android:layout_marginTop="8dp" />

</LinearLayout>
